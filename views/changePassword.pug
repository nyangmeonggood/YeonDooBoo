extends layouts/main.pug

block content
    .formContainer
        form(action=`users/${routes.changePassword}` method="post")
            input(type="password" name="oldPassword" placeholder="기존 비밀번호를 입력해주세요" required=true)
            input(type="password" name="newPassword" placeholder="새 비밀번호를 입력해주세요" required=true)
            input(type="password" name="newPasswordConfirm" placeholder="새 비밀번호를 다시 입력해주세요" required=true)
            input(type="submit" value="수정완료")