extends layouts/main.pug

block content
    .formContainer
        form(action=routes.join method="post")
            input(type="text" name="name" placeholder="이름을 입력해주세요" required=true)
            input(type="email" name="email" placeholder="이메일을 입력해주세요" required=true)
            input(type="password" name="password" placeholder="비밀번호를 입력해주세요" required=true)
            input(type="password" name="passwordConfirm" placeholder="비밀번호를 재입력해주세요" required=true)
            input(type="submit" value="가입하기")